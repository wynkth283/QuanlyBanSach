<style>
  .Edit {
    border: 1px solid;
    padding: 5px;
    margin-left: 30px;
    color: black;
    text-decoration: none;
    place-self: start;
  }
  .Edit:hover {
    background-color: black;
    color: white;
    transition: all 0.3s ease;
  }

  .Back {
    border: 1px solid;
    padding: 5px;
    margin-left: 15px;
    color: black;
    text-decoration: none;
    place-self: start;
  }
  .Back:hover {
    background-color: black;
    color: white;
    transition: all 0.3s ease;
  }

  .Destroy {
    border: 1px solid;
    padding: 5.5px;
    margin-left: 15px ;
    color: black;
    text-decoration: none;
    font-size: 15px;

  }
  .Destroy:hover {
    background-color: red;
    color: white;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .left {
    margin-left: 25%;
  }
</style>
<p style="padding: 30px 30px 30px 30px; font-weight: bold; font-size: 20px; border-bottom: 1px solid #dddd;">Quản lý danh mục sách > Thông tin danh mục sách</p>

<p style="background: green; color: white; padding-left: 10px"><%= notice %></p>
<%= render @danh_muc %>

<div style="display: flex; padding-top: 20px">
  <%= link_to "Chỉnh sửa danh mục sách", edit_danh_muc_path(@danh_muc), class: "Edit left"%> 
  <%= link_to "Quay lại danh sách danh mục", danh_mucs_path, class: "Back" %>
  <%= button_to "Xóa danh mục mục này", @danh_muc, method: :delete,class: "Destroy" %>
</div>

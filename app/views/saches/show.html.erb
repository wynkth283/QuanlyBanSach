<style>
  .Edit {
    border: 1px solid;
    padding: 5px;
    margin-left: 30px;
    color: black;
    text-decoration: none;
  }
  .Edit:hover {
    background-color: black;
    color: white;
    transition: all 0.3s ease;
  }

  .Back {
    border: 1px solid;
    padding: 5px;
    margin-left: 15px;
    color: black;
    text-decoration: none;
  }
  .Back:hover {
    background-color: black;
    color: white;
    transition: all 0.3s ease;
  }

  .Destroy {
    border: 1px solid;
    padding: 5px;
    margin-left: 30px;
    margin-top: 15px;
    color: black;
    text-decoration: none;
    font-size: 15px;
  }
  .Destroy:hover {
    background-color: red;
    color: white;
    transition: all 0.3s ease;
    cursor: pointer;
  }
  .show {
    max-height: 690px;
    overflow: auto;
    }
</style>
<div class="show">
  <p style="padding: 30px 30px 30px 30px; font-weight: bold; font-size: 20px; border-bottom: 1px solid #dddd;">Quản lý sách > Thông tin sách</p>
  <p style="background: green; color: white; padding-left: 10px"><%= notice %></p>

  <%= render @sach %>

  <div>
    <%= link_to "Sửa thông tin sách", edit_sach_path(@sach), class:'Edit' %>
    <%= link_to "Về Quản lý sách", saches_path, class:'Back' %>
    <%= button_to "Xóa sách", @sach, class:'Destroy' , method: :delete%>
  </div>
</div>

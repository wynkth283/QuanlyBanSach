<div class="don_dat_hang">
    <div class="don_dat_hang_info">
      <p>
        <strong>Người dùng:</strong>
        <%= don_dat_hang.nguoidung_id %>
      </p>
      <p>
        <strong>Tên ND:</strong>
        <%= don_dat_hang.TenND %>
      </p>
      <p>
        <strong>Email:</strong>
        <%= don_dat_hang.Email %>
      </p>
      <p>
        <strong>SĐT:</strong>
        <%= don_dat_hang.SDT %>
      </p>
      <p>
        <strong>Địa chỉ:</strong>
        <%= don_dat_hang.DiaChi %>
      </p>
      <p>
        <strong>Chi tiết:</strong>
        <%= don_dat_hang.ChiTiet %>
      </p>
      <p>
        <strong>Tổng tiền:</strong>
        <%= don_dat_hang.TongTien %>
      </p>
      <p>

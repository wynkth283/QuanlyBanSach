<%= stylesheet_link_tag 'new_nd' %>
<p style="margin-left: 300px;color: green"><%= notice %></p>
<form action="/nguoidungs" method="post" enctype="multipart/form-data" class="form_themtk">
  <h1 style = "margin-top : 10px; text-align: center">THÊM TÀI KHOẢN</h1>
  <br><hr>
  <table class="themtk">
    <tr class="form-group">
      <th><label for="ten_nd">Tên người dùng:</label> <span style="color: red;">*</span></th>
      <td colspan="3"><input type="text" class="form-control" id="ten_nd" name="nguoidung[TenND]" placeholder="Nhập tên người dùng" required></td>
    </tr>
    <tr class="form-group">
      <th><label for="anh_dai_dien">Ảnh đại diện</label></th>
      <td colspan="3"><input type="file" class="form-control-file" id="anh_dai_dien" name="nguoidung[AnhDaiDien]"></td>
    </tr>
    <tr class="form-group">
      <th><label for="sdt">Số điện thoại:</label><span style="color: red;">*</span></th>
      <td><input type="number" class="form-control" id="sdt" name="nguoidung[SDT]" min="0" placeholder="Nhập số điện thoại" required></td>
      <th><label for="email">Email:</label><span style="color: red;">*</span></th>
      <td><input type="email" class="form-control" id="email" name="nguoidung[Email]" placeholder="Nhập Email" required></td>
    </tr>
    <tr class="form-group">
      <th><label for="loai_quyen">Loại quyền:</label><span style="color: red;">*</span></th>
      <td>
        <select name="nguoidung[loai_quyen_id]">
          <option value="1">Admin</option>
          <option value="2">Khách hàng</option>
          <option value="3">Nhân viên</option>
        </select>
      </td>
      <th><label for="mat_khau">Mật khẩu:</label><span style="color: red;">*</span></th>
      <td><input type="text" class="form-control" id="mat_khau" name="nguoidung[MatKhau]" placeholder="Nhập mật khẩu" required></td>
    </tr>
    <tr class="form-group">
      <th><label for="dia_chi">Địa chỉ:</label><span style="color: red;">*</span></th>
      <td colspan="3"><input type="text" class="form-control" id="dia_chi" name="nguoidung[DiaChi]" placeholder="Nhập địa chỉ" required></td>
    </tr>
    <tr class="form-group">
      <td colspan="4"><button type="submit" class="Edit">Thêm</button></td>
    </tr>
  </table>
</form>

